<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- 工作日打卡状态显示 -->
    <TextView
        android:id="@+id/tv_workday_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_daily_schedule"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/white"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:drawableTop="@android:drawable/ic_dialog_info"
        android:drawablePadding="8dp"/>

    <Button
        android:id="@+id/btn_start_dingding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_instant_start"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_test_dingding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_test_start"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/white"
        android:padding="12dp"/>
</LinearLayout>
